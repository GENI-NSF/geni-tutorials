  <node client_id="host1" exclusive="false" component_id="urn:publicid:IDN+instageni.maxgigapop.net+node+pc3" component_manager_id="urn:publicid:IDN+instageni.maxgigapop.net+authority+cm">
    <sliver_type name="emulab-xen">
      <ns0:xen xmlns:ns0="http://www.protogeni.net/resources/rspec/ext/emulab/1" cores="1" ram="256" disk="8"/>
    </sliver_type>
    <interface client_id="host1:if0">
      <ip address="10.10.1.1" netmask="255.255.255.0" type="ipv4"/>
